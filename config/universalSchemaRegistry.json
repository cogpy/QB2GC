  "universalTypes": {
    "Person": {
      "description": "Individual human being",
      "coreFields": ["externalId", "name", "firstName", "lastName", "email", "phone", "jobTitle"],
      "extendedFields": ["department", "manager", "birthDate", "address"]
    },
    "Organization": {
      "description": "Business entity or company",
      "coreFields": ["externalId", "name", "website", "industry", "revenue"],
      "extendedFields": ["primaryAddress", "phone", "employees", "founded"]
    },
    "Product": {
      "description": "Product or service offering",
      "coreFields": ["externalId", "name", "productType", "unit"],
      "extendedFields": ["manufacturer", "price", "sku", "description"]
    },
    "FinancialAccount": {
      "description": "Financial account in accounting system",
      "coreFields": ["externalId", "name", "accountNumber", "accountType", "balance"],
      "extendedFields": ["currency", "description", "isActive"]
    },
    "OrganizationalUnit": {
      "description": "Department, division, or organizational grouping",
      "coreFields": ["externalId", "name", "fullName"],
      "extendedFields": ["description", "parent", "isActive"]
    },
    "Order": {
      "description": "Sales or purchase order",
      "coreFields": ["externalId", "orderNumber", "totalAmount", "currency"],
      "extendedFields": ["status", "customer", "items", "orderDate"]
    },
    "Invoice": {
      "description": "Invoice or bill",
      "coreFields": ["externalId", "invoiceNumber", "totalAmount", "status"],
      "extendedFields": ["dueDate", "customer", "items", "currency"]
    },
    "Transaction": {
      "description": "Financial transaction",
      "coreFields": ["externalId", "amount", "currency", "timestamp"],
      "extendedFields": ["status", "description", "reference", "account"]
    },
    "Deal": {
      "description": "Sales opportunity or deal",
      "coreFields": ["externalId", "name", "value", "stage"],
      "extendedFields": ["closeDate", "probability", "owner", "account"]
    },
    "TaxCode": {
      "description": "Tax code or taxation rule",
      "coreFields": ["externalId", "name", "rate"],
      "extendedFields": ["description", "jurisdiction", "effectiveDate"]
    },
    "Group": {
      "description": "Grouping or team",
      "coreFields": ["externalId", "name"],
      "extendedFields": ["description", "members", "owner"]
    }
  },
